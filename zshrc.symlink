if [ -d "$HOME/.bin" ]; then
  path=($HOME/.bin $path)
fi

source /usr/local/share/antigen.zsh

antigen use oh-my-zsh

antigen bundle git
antigen bundle zsh-users/zsh-syntax-highlighting
antigen bundle nojhan/liquidprompt

antigen apply

export EDITOR='vim -f'
alias v='vim'

rbenv() {
  eval "$(command rbenv init -)"
  rbenv "$@"
}

pyenv() {
  eval "$(command pyenv init -)"
  pyenv "$@"
}
